%table.table.table-striped.table-hover
  %tr
    %td= Patient.human_attribute_name(:id)
    %td= Patient.human_attribute_name(:first_name)
    %td= Patient.human_attribute_name(:last_name)
    %td= Patient.human_attribute_name(:sur_name)
    %td= Patient.human_attribute_name(:phone_number)
    %td= Patient.human_attribute_name(:birthday)
    %td= Patient.human_attribute_name(:address)
    %td= Patient.human_attribute_name(:sickness)
    %td= Patient.human_attribute_name(:height)
    %td= Patient.human_attribute_name(:weight)
    %td= Patient.human_attribute_name(:watcher)
    %td= t('control')
  - @patients.each do |patient|
    %tr
      %td= patient.id
      %td= patient.first_name
      %td= patient.last_name
      %td= patient.sur_name
      %td= patient.phone_number
      %td= patient.birthday
      %td= patient.address
      %td= patient.sickness
      %td= patient.height
      %td= patient.weight
      %td= patient.watcher.first_name
      %td= link_to t('.show'), admin_patient_path(patient)
= link_to t('.create'), new_admin_patient_path(@patient), :class => "btn btn-outline-secondary"
= link_to t('.back'), admin_root_path, :class => "btn btn-outline-secondary"

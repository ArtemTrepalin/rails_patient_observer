%table.table.table-striped.table-hover
  %tr
    %th= Status.human_attribute_name(:name)
  %tbody
    %tr
      %td=@status.name
= link_to t('.back'), admin_statuses_path, :class => "btn btn-outline-secondary"
= link_to t('.delete'), admin_status_path(@status.id), method: :delete, :class => "btn btn-outline-secondary"
= link_to t('.edit'), edit_admin_status_path(@status.id), :class => "btn btn-outline-secondary"


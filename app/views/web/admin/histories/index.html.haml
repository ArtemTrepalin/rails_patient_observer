%table.table-striped.table-hover
  %tr
    %td= History.human_attribute_name(:id)
    %td= History.human_attribute_name(:temperature)
    %td= History.human_attribute_name(:pressure)
    %td= History.human_attribute_name(:watcher)
    %td= History.human_attribute_name(:status)
    %td= History.human_attribute_name(:updated_at)
  - @histories.each do |history|
    %tr
      %td= history.id
      %td= history.temperature
      %td= history.pressure
      %td= history.patient.first_name
      %td= history.status.name
      %td= history.updated_at
= link_to t('.back'), admin_root_path, :class => "btn btn-outline-secondary"
